# Environment Variables for Eventazia Backend
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3001
NODE_ENV=production

# Frontend URL (Vercel deployment URL - add your actual URL after deployment)
# Separate multiple URLs with commas
FRONTEND_URL=https://your-app.vercel.app

# MongoDB Configuration
# IMPORTANT: Use MongoDB Atlas for production
# Create a free cluster at https://www.mongodb.com/cloud/atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/eventazia?retryWrites=true&w=majority

# Email Configuration (SendGrid HTTP API - REQUIRED for Render)
# Sign up at https://sendgrid.com/ (free tier: 100 emails/day)
# Create API key at https://app.sendgrid.com/settings/api_keys
# Verify sender at https://app.sendgrid.com/settings/sender_auth
SENDGRID_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM=Eventazia <your-verified-email@gmail.com>

# Support Contact (displayed in emails)
SUPPORT_CONTACT=your-support-email@gmail.com

# OTP Configuration
OTP_EXPIRY_MINUTES=5
OTP_MAX_ATTEMPTS=3

# Admin Credentials (for admin dashboard - change these!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-password-here
